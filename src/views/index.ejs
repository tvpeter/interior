<!--welcome-section-->
<section class="welcome-section">
  <div class="auto-container">
    <div class="row clearfix">
      <!--welcome-column-->
      <div class="col-md-6 col-sm-12 col-xs-12 welcome-column">
        <!--inner-content-->
        <div
          class="inner-content wow fadeInLeft"
          data-wow-delay="0ms"
          data-wow-duration="1500ms"
        >
          <h2>Welcome to FMG Furniture Company</h2>
          <h3>Lasting quality at competitive prices <span></span></h3>

          <div class="text">
            FMG offers quality long-lasting furniture at affordable prices. Our
            works combines a commanding aethetic presence with quality to give
            your home/office a suiting presence that it deserves. Our attention
            to details coupled with years of deligence in the industry make us
            well positioned to meet your furniture needs. Our catalog offers
            tremendous depth of choices ranging from our finely-crafted
            furniture, to wooden flooring and interior curtains. Contact us
            today and join our happy clients to enjoy our unique services and
            products.
          </div>

          <!--author-title-->
          <div class="author-title">
            <div class="author-info">Ferdinand</div>
            <div class="author-designation">Team Leader.</div>
          </div>
        </div>
      </div>

      <!--service-column-->
      <div class="col-md-6 col-sm-12 col-xs-12 service-column">
        <!--service-block-one-->
        <% for (let quality of qualities) { %>
        <div class="service-block-one">
          <div class="inner-box">
            <!--icon-block-->
            <div class="icon-box">
              <span class="flaticon-avatar-1"></span>
            </div>
            <h3><%= quality.title %></h3>
            <div class="text"><%= quality.description %></div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</section>

<!--best-service-section-->
<section class="best-service-section">
  <div class="auto-container">
    <!--sec-title-->
    <div class="sec-title clearfix">
      <h2 class="pull-left">Our Services</h2>
      <a class="service-link pull-right" href="/services"
