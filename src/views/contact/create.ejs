<!DOCTYPE html>
<html>
  <% include ../partials/adminheader %>
  <!--Page Info-->
  <section class="page-info"></section>

  <!--Contact Section-->
  <section class="contact-section">
    <div class="auto-container">
      <div class="row clearfix">
        <% include ../partials/aside %>
        <div
          class="column form-column col-lg-6 col-md-6 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1"
        >
          <!--Form Column -->
          <div class="sec-title medium"><h2>Create Contact Details</h2></div>
          <%= pageDetails.error %>
          <div class="form-box default-form">
            <div class="contact-form default-form">
              <form method="post" action="/contact/create" id="contact-form">
                <div class="row clearfix">
                  <div class="form-group col-md-12 col-sm-12 col-xs-12">
                    <input
                      type="email"
                      name="email"
                      placeholder="Email account"
                      required
                    />
                  </div>

                  <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <input
                      type="text"
                      name="phone"
                      value=""
                      placeholder="Major phone number"
                      required
                    />
                  </div>

                  <div class="form-group col-md-6 col-sm-6 col-xs-12">
                    <input
                      type="text"
                      name="secondline"
                      placeholder="Phone Number"
                    />
                  </div>

                  <div class="form-group col-md-12 col-sm-12 col-xs-12">
                    <textarea name="address" placeholder="Address *"></textarea>
                  </div>
                  <div class="form-group col-md-12 col-sm-12 col-xs-12">
                    <button type="submit" class="theme-btn btn-style-two">
                      Get Quote
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <% include ../partials/adminfooter %>
</html>
