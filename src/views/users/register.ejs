<!DOCTYPE html>
<html>

<% include ../partials/adminheader %>    
    
    <section class="register-section">
        <div class="auto-container">
            <div class="row clearfix">
                    <% include ../partials/aside %>
                
                <div class="column form-column  col-lg-6 col-md-6 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1">
                
                    <div class="sec-title medium">
                        <h2>Register Users</h2>
                    </div>
                    <% if(pageDetails.error) {%>
                    <%= pageDetails.error %>
                    <%}%>
                    <div class="styled-form login-form">
                        <form method="post" action="/users" name="form1">
                            <div class="form-group">
                                <span class="adon-icon"><span class="fa fa-user"></span></span>
                                <input type="text" name="name" required placeholder="Your Name *">
                            </div>
                            <div class="form-group">
                                <span class="adon-icon"><span class="fa fa-envelope-o"></span></span>
                                <input type="email" name="email" placeholder="Enter email" required>
                            </div>
                            <div class="form-group">
                            <span class="adon-icon"><span class="fa fa-phone"></span></span>
                            <input type="text" name="phone" placeholder="Phone number" required>
                        </div>
                            <div class="form-group">
                                <span class="adon-icon"><span class="fa fa-unlock-alt"></span></span>
                                <input type="password" name="password" placeholder="Enter Password" required>
                            </div>
                            <div class="form-group">
                            <span class="adon-icon"><span class="fa fa-unlock-alt"></span></span>
                            <input type="password" name="password_confirmation" placeholder="Confirm Password" required>
                        </div>
                         <div class="form-group">
                                <span class="adon-icon"><span class="fa fa-angle-double-down"></span></span>
                                <select name="access">
                                <option value="" selected disabled>Access Level</option>
                                <option value="admin">Admin</option>
                                <option value="user">User</option>
                                </select>
                            </div>
                        <div class="clearfix">
                                <div class="form-group pull-left">
                                    <button type="submit" class="theme-btn btn-style-two">Register</button>
                                </div>
                            </div>
                            
                        </form>
                    </div>
                    
                </div>
                
                
            </div>
        </div>
    </section>
      
   <% include ../partials/adminfooter %>